<Window x:Class="NHMPh_music_player.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NHMPh_music_player"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="LoginWindow" Height="580" Width="500" WindowStyle="None" ResizeMode="NoResize" BorderThickness="0">
    <Grid>
        <StackPanel Orientation="Vertical" Background="#FFECECEC" >
            <TextBlock Text="Authentication" FontSize="20"   Margin="10" HorizontalAlignment="Left" Foreground="#FF5D5D5D"/>
            <DockPanel Name="WebViewPannel" Height="474" Width="500">
                <wv2:WebView2 Name="webView"/>
            </DockPanel>
            <Grid Name="AuthenPannel" Height="0" Width="500" Background="White">
                <TextBlock Text="You are authenticated"
                   FontSize="24"
                   Foreground="#FF53B35D"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

                <Button Content="Log out" Click="Button_Click_1" FontStyle="Italic" BorderThickness="0" HorizontalAlignment="Center" Background="Transparent" Margin="0,352,0,0" VerticalAlignment="Top" Height="32" Width="116" Foreground="#FFE03939" FontSize="20">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Ellipse HorizontalAlignment="Center" Height="333" Stroke="Lime" VerticalAlignment="Top" Width="334" Margin="0,95,0,0"/>
                <TextBlock Text="Close this window to take effect"
                    FontSize="16"
                    Foreground="#FF444444"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center" Margin="0,276,0,0"/>
            </Grid>

            <Button Content="Close" FontSize="18" Height="30" Width="450" Margin="0,13,0,0" BorderThickness="1" BorderBrush="Black" Click="Button_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</Window>
